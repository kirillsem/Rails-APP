= provide(:title, @title)
.row
  %aside.span4
    %section
      %h1= @user.email
      %span= link_to "view my profile", @user
    %section
      = render 'users/stats'
      - if @users.any?
        .user_avatars
          - @users.each do |user|
  .span8
    %h3= @title
    - if @users.any?
      %ul.users= render @users
      / <#%= will_paginate %>
