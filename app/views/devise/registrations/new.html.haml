= image_tag "small_logo_hover.png", style:"margin:45px auto 0px auto;position: relative;display: inherit"
%h3{:style => "margin:0 auto;position: relative;text-align:center;font-family:'Lato';font-size:16px;font-style:italic;color:#000"} Read To Others. Let Others Read To You
= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
  = devise_error_messages!
  = f.email_field :email, autofocus: true, placeholder:"Email"
  = f.password_field :password, autocomplete: "off", placeholder:"Password"
  = f.password_field :password_confirmation, autocomplete: "off", placeholder:"Password "
  = f.submit "Sign Up", class:"sign_up_submit"
  %hr{:style => "height:2px;border:none;color:#FFFAFA;background-color: #FFFAFA;"}/
  /
    <button class="tw btn">Twitter</button>
    <button class="fb btn">Facebook</button>
  %h4.login{:style => "text-align:center"}= link_to "Already have an account?", new_user_session_path
